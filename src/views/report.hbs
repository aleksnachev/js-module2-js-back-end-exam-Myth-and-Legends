

        <main class="report-section">
            <section id="report-section">
                <h2>Report</h2>
                {{#if myths}}
                <ul class="report-list">
                    <!-- Display a li with information about every post (if any)-->
                    
                    {{#each myths}}
                    <ul id="report-list">
                        <li class="report-card">
                            <img src="{{imageUrl}}" />
                            <h3>{{name}}</h3>
                            <p><strong>Origin:</strong> <br> {{origin}}</p>
                            <p><strong>Role:</strong> <br> {{role}}</p>
                            <p><strong>Symbol:</strong> <br>{{symbol}}</p>
                            <p><strong>Era:</strong> <br> {{era}}</p>
                            <p><strong>Created on:</strong> <br>{{createdAtFormatted}}</p>
                            <p><strong>Owner:</strong> <br> {{ownerEmial}}</p>
                        </li>
                    {{/each}}
                    </ul>
                </ul>
                {{else}}
                <!-- Display an h2 if there are no posts -->
                <h2 id="no-post">There are no myths and legends! </h2> 
                {{/if}}
                <!-- Display an h2 if an error occurs -->
                <!-- <h2 id="no-post">Error loading report! </h2> -->

            </section>
        </main>

